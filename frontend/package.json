{
  "name": "chat-platform-frontend",
  "version": "1.0.0",
  "description": "Real-time chat platform frontend built with React and TypeScript",
  "private": true,
  "homepage": ".",
  "author": "Jeffrey Jose",
  "license": "MIT",
  "keywords": [
    "react",
    "typescript",
    "chat",
    "realtime",
    "websocket"
  ],
  "overrides": {
    "svgo": "^3.2.0",
    "rimraf": "^5.0.0",
    "glob": "^10.3.0",
    "sourcemap-codec": "npm:@jridgewell/sourcemap-codec@^1.5.0",
    "rollup-plugin-terser": "npm:@rollup/plugin-terser@^0.4.0",
    "@humanwhocodes/config-array": "npm:@eslint/config-array@^0.19.0",
    "@humanwhocodes/object-schema": "npm:@eslint/object-schema@^2.1.0",
    "@babel/plugin-proposal-class-properties": "npm:@babel/plugin-transform-class-properties@^7.25.0",
    "@babel/plugin-proposal-private-methods": "npm:@babel/plugin-transform-private-methods@^7.25.0",
    "@babel/plugin-proposal-private-property-in-object": "npm:@babel/plugin-transform-private-property-in-object@^7.25.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "npm:@babel/plugin-transform-nullish-coalescing-operator@^7.25.0",
    "@babel/plugin-proposal-numeric-separator": "npm:@babel/plugin-transform-numeric-separator@^7.25.0",
    "@babel/plugin-proposal-optional-chaining": "npm:@babel/plugin-transform-optional-chaining@^7.25.0",
    "workbox-cacheable-response": "^7.0.0",
    "workbox-core": "^7.0.0",
    "workbox-expiration": "^7.0.0",
    "workbox-google-analytics": "^7.0.0",
    "workbox-navigation-preload": "^7.0.0",
    "workbox-precaching": "^7.0.0",
    "workbox-range-requests": "^7.0.0",
    "workbox-routing": "^7.0.0",
    "workbox-strategies": "^7.0.0",
    "workbox-background-sync": "^7.0.0",
    "source-map": "^0.7.4",
    "eslint": "^8.57.1",
    "jsdom": "^24.0.0"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.14",
    "@heroicons/react": "^2.0.18",
    "@hookform/resolvers": "^3.1.0",
    "@tanstack/react-query": "^4.29.0",
    "@types/node": "^18.15.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "autoprefixer": "^10.4.14",
    "axios": "^1.4.0",
    "date-fns": "^2.30.0",
    "postcss": "^8.4.23",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.44.0",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.11.0",
    "react-scripts": "5.0.1",
    "react-virtualized": "^9.22.5",
    "socket.io-client": "^4.7.2",
    "tailwindcss": "^3.3.0",
    "typescript": "^4.9.5",
    "zod": "^3.21.4",
    "zustand": "^4.3.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^27.5.2",
    "@types/react-virtualized": "^9.21.21",
    "eslint-config-prettier": "^8.8.0",
    "prettier": "^2.8.8"
  },
  "scripts": {
    "start": "react-scripts start",
    "start:network": "HOST=0.0.0.0 react-scripts start",
    "prebuild": "node generate-build-info.js",
    "build": "react-scripts build",
    "build:analyze": "npm run build && npx serve -s build",
    "test": "react-scripts test",
    "test:ci": "react-scripts test --coverage --watchAll=false",
    "test:coverage": "react-scripts test --coverage --watchAll=false --collectCoverageFrom='src/**/*.{ts,tsx}' --collectCoverageFrom='!src/**/*.d.ts'",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf build node_modules/.cache",
    "dev": "npm start",
    "validate": "npm run lint && npm run test:ci",
    "validate:full": "npm run type-check && npm run lint && npm run test:ci"
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!(axios)/)"
    ],
    "moduleNameMapper": {
      "^axios$": "axios/dist/node/axios.cjs"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
