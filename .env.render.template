# Environment variables template for Render deployment
# Copy this file to your Render service environment variables

# Database Configuration (Render PostgreSQL)
DATABASE_URL=postgresql://username:password@hostname:port/database
DATABASE_USERNAME=your_db_username
DATABASE_PASSWORD=your_db_password

# MongoDB Atlas Configuration (Free Tier M0)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/chatdb?retryWrites=true&w=majority

# Redis Configuration (Upstash or similar free tier)
REDIS_URL=redis://default:password@hostname:port

# JWT Configuration
JWT_SECRET=your-very-secure-jwt-secret-key-change-this-in-production

# CORS Configuration
CORS_ALLOWED_ORIGINS=*
WEBSOCKET_ALLOWED_ORIGINS=*

# Application Settings
SPRING_PROFILES_ACTIVE=render
PORT=8080

# Logging
LOGGING_LEVEL_COM_CHATPLATFORM=INFO
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_WEB=WARN
LOGGING_LEVEL_ORG_HIBERNATE=WARN